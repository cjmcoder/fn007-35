# === FLOCKNODE Web Environment Variables ===

# API Configuration
NEXT_PUBLIC_API_BASE_URL="https://api.flocknode.com"
NEXT_PUBLIC_WEB_BASE_URL="https://app.flocknode.com"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_ENV="development"

# Feature Flags
NEXT_PUBLIC_ENABLE_PROPS=true
NEXT_PUBLIC_ENABLE_WAGERS=true
NEXT_PUBLIC_ENABLE_DEPOSITS=true
NEXT_PUBLIC_ENABLE_WITHDRAWALS=true

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# OAuth Redirect URLs (for client-side)
NEXT_PUBLIC_OAUTH_REDIRECT_BASE="https://app.flocknode.com"

# Coinbase Commerce (public key for client)
NEXT_PUBLIC_COINBASE_COMMERCE_PUBLIC_KEY=""

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID="8453" # Base mainnet
NEXT_PUBLIC_USDC_CONTRACT="0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913"

# Matching System
NEXT_PUBLIC_MATCH_BOARD_ENABLED=true
NEXT_PUBLIC_QUICKMATCH_ENABLED=true
NEXT_PUBLIC_FLOCKTUBE_API_URL="https://api.flocktube.local"
